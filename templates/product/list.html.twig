{% extends 'base.html.twig' %}

{% block title %}Products - E-commerce DDD Demo{% endblock %}

{% block body %}
<div class="card">
    <div class="row">
        <div class="col">
            <h2>ðŸ“¦ Product Catalog</h2>
            <p>Manage your product inventory with DDD business rules enforcement.</p>
        </div>
        <div class="col text-right">
            <a href="{{ path('products_create') }}" class="btn btn-success">âž• Add New Product</a>
        </div>
    </div>

    {% if products is empty %}
        <div class="mt-3">
            <p>No products available yet.</p>
            <a href="{{ path('products_create') }}" class="btn">Create Your First Product</a>
        </div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Quantity Rules</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                <tr>
                    <td>
                        <strong>{{ product.name }}</strong>
                    </td>
                    <td>{{ product.price }}</td>
                    <td>
                        <span class="badge {% if product.type.value == 'piece' %}badge-new{% else %}badge-invoiced{% endif %}">
                            {{ product.type.value|upper }}
                        </span>
                    </td>
                    <td>
                        {% if product.type.value == 'piece' %}
                            <small>Integer quantities only (1, 2, 3...)</small>
                        {% else %}
                            <small>Decimal quantities allowed (1.5, 2.75...)</small>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            <p><strong>{{ products|length }}</strong> products available</p>
        </div>
    {% endif %}
</div>

<div class="card">
    <h3>ðŸ’¡ Business Rules Enforced</h3>
    <div class="row">
        <div class="col">
            <h4>Product Name Uniqueness</h4>
            <p>Each product must have a unique name. Try creating a product with a duplicate name to see the validation in action.</p>
        </div>
        <div class="col">
            <h4>Product Types</h4>
            <ul>
                <li><strong>PIECE:</strong> Sold by individual units (e.g., phones, books)</li>
                <li><strong>WEIGHT:</strong> Sold by weight/volume (e.g., rice, flour)</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}